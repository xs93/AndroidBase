<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickEvent"
            type="com.github.xs93.core.simple.activity.MainActivity" />

        <variable
            name="surface"
            type="com.github.xs93.core.ui.Surface" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700"
        android:gravity="top"
        android:orientation="vertical"
        tools:context=".activity.MainActivity">


        <View
            android:layout_width="match_parent"
            android:layout_height="@{surface.insets.top,default = wrap_content}"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2222" />

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:title="@string/app_name"
            app:titleTextColor="@color/white" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3" />

        <Button
            android:id="@+id/button"
            onSingleClick="@{clickEvent::clickFullScreenDialog}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FullScreenDialog" />
    </LinearLayout>
</layout>